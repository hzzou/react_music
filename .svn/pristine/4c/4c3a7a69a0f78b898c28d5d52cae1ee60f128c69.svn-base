
@import "../../fontSize.styl"

.albumList
	width 100%
	height 100%
	overflow-y auto
	.album-top
		width 100%
		height 320px
		position relative
		.album-bg
			width 100%
			height 320px
			filter blur(50px)
			position absolute
			top 0
			left 0
		.album-content
			width 100%
			height 320px
			position absolute
			top 20px
			left 20px
			display flex
			justify-content flex-start
			.album-img
				width 280px
				height 280px
				margin-right 20px
			.album-text
				color #fff
				display flex
				justify-content center
				flex-direction column
				box-sizing border-box  //和padding-right再配合p的margin-right才有效
				padding-right 20px
				p
					margin-right 20px
	.album-play
		display flex
		justify-content space-between
		padding 20px
		color #e9203d
		border-bottom 1px solid #e9203d
		span
			font-size(16px)
		.anticon-plus
			font-size(18px)
	.album-list
		padding 20px
		overflow-y auto
		ul
			padding 0
		li
			list-style-type none
			padding 20px 0
			border-bottom 1px solid #aaa
			display flex
			justify-content space-between
			a
				color #333
				&>span
					display flex
					justify-content flex-start
					flex-wrap wrap
					span
						flex-basis 100%
						&:nth-of-type(2)
							font-size(12px)
							color #999
			.plus_one
				margin-left 10px
				display block
			.minus_one
				margin-left 10px
				display none
					