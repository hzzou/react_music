
@import "../../fontSize.styl" //定义不同dpr下的fontSize,需要在每个css文件下引入
.search
	width 100%
	height 100%
	overflow auto
	.header
		width 100%
		height 96px
		background #e9203d
		display flex
		justify-content center
		.searchBar
			flex 1 1 558px
			padding 16px 0
			.searchInput
				width 100%
				height 100%
				line-height 64px
				background #fff
				border-radius 50px
				display flex
				justisy-content center
				.input-search
					flex 1 1 462px
					outline none
					border none
					font-size(16px)
				i
					flex 0 1 48px
					text-align center
					line-height 64px
		.headerBack,.headerRight
			flex 0 1 96px
			line-height 96px
			text-align center
			color #fff
		.headerBack
			font-size(24px)
		.headerRight
			font-size(16px)
		
	.hotSearch
		padding 20px 0
		margin 0 20px
		border-bottom 1px solid #ccc
		font-size(16px)
	.hotList
		padding 20px 20px 0
		display flex
		justify-content flex-start
		flex-wrap wrap
		span
			padding 20px
			margin 0 20px 20px 0
			font-size(16px)
			border 1px solid #ccc
			border-radius 50px
			&:first-of-type
				border-color #e9203d
				color #e9203d
	.searchHistory
		padding 20px 0
		margin 0 20px
		border-bottom 1px solid #ccc
		font-size(16px)
		display flex
		justify-content space-between
		span:last-of-type
			color #e9203d
	.historyList
		padding 0 20px
		p
			margin 0
			padding 20px 0
			border-bottom 1px solid #ccc
			display flex
			justify-content space-between
			align-items center
		
		
	